<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/one"
        android:paddingTop="@dimen/one"
        android:text="@string/uname"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/one"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="44dp" />

    <TextView
        android:id="@+id/pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/one"
        android:paddingTop="@dimen/fourth"
        android:text="@string/pwd"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/one"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/uname"
        android:layout_alignStart="@+id/uname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uname"
        android:layout_alignBottom="@+id/uname"
        android:layout_gravity="right"
        android:layout_marginLeft="@dimen/fifth"
        android:layout_marginStart="@dimen/fifth"
        android:layout_toEndOf="@+id/uname"
        android:layout_toRightOf="@+id/uname"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:inputType="text"
        android:text="@string/txt"
        android:id="@+id/editText2" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pwd"
        android:layout_alignBottom="@+id/pwd"
        android:layout_marginLeft="@dimen/fifth"
        android:layout_marginStart="@dimen/fifth"
        android:layout_toEndOf="@+id/pwd"
        android:layout_toRightOf="@+id/pwd"
        android:inputType="textPassword"
        android:text="@string/pwd" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_marginTop="@dimen/sixth"
        android:layout_toEndOf="@+id/pwd"
        android:layout_toRightOf="@+id/pwd"
        android:text="@string/v" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/passwordWrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uname"
        android:layout_marginTop="@dimen/fourteen">

    </android.support.design.widget.TextInputLayout>




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/v"
        android:id="@+id/button2"

        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/uname"
        android:layout_toEndOf="@+id/uname"
        android:layout_marginBottom="@dimen/thirteen" />


    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/thirteen"
        android:hint="@string/uname"
        android:inputType="textPassword" />


</RelativeLayout>