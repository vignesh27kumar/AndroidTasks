<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">

<ImageView
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixteen"
    android:src="@drawable/bat1"
    android:layout_marginTop="@dimen/fifteen"

    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />


    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="@dimen/seventeen"
        android:layout_height="@dimen/eightteen"
        android:layout_centerHorizontal="true"
        card_view:cardCornerRadius="27dp"

        android:layout_below="@+id/image"
        android:layout_marginRight="@dimen/twenty"
        android:layout_marginTop="@dimen/fifteen">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cardtext"
    android:text="@string/cardname"
    android:textSize="@dimen/one"
    android:layout_marginTop="@dimen/fourth"
    android:layout_marginLeft="@dimen/one"
    />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
  android:inputType="text"
    android:ems="7"
    android:layout_marginLeft="@dimen/twentyone"
    android:layout_marginTop="@dimen/twentytwo" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/cardage"
               android:text="@string/cardage"
               android:textSize="@dimen/tenth"
               android:layout_below="@+id/cardtext"
               android:layout_marginTop="@dimen/tenth"
               android:layout_marginLeft="@dimen/tenth"

               />
           <EditText
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:ems="7"
               android:layout_below="@id/cardtext"
               android:layout_marginLeft="@dimen/twentyone"
               android:layout_marginTop="@dimen/twenty" />

       </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.design.widget.FloatingActionButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_name"
        android:layout_marginBottom="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/cardview"
        android:layout_toRightOf="@+id/cardview" />

</RelativeLayout>